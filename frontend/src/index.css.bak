/* Apple-Style Minimalist UI - Premium Glassmorphism */
@import "tailwindcss";

@theme {
  /* Colors - Deep Premium Palette */
  --color-brand-primary: #2997FF;
  /* Apple Blue */
  --color-brand-accent: #BF5AF2;
  /* Apple Purple for accents */
  --color-brand-success: #30D158;
  --color-brand-warning: #FF9F0A;
  --color-brand-danger: #FF453A;

  --color-bg-dark: #000000;
  --color-text-primary: #F5F5F7;
  --color-text-secondary: #86868B;
  --color-border-glass: rgba(255, 255, 255, 0.1);

  /* Fonts */
  --font-sans: "SF Pro Display", "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
  --font-display: "SF Pro Display", "Inter", -apple-system, BlinkMacSystemFont, sans-serif;

  /* Animations */
  --animate-float: float 6s ease-in-out infinite;
  --animate-fade-in-up: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  --animate-ticker: ticker 30s linear infinite;

  @keyframes float {

    0%,
    100% {
      transform: translateY(0px);
    }

    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes ticker {
    0% {
      transform: translateX(0);
    }

    100% {
      transform: translateX(-100%);
    }
  }

  @keyframes heartbeat {
    0% {
      transform: scale(1);
    }

    15% {
      transform: scale(1.3);
    }

    30% {
      transform: scale(1);
    }

    45% {
      transform: scale(1.15);
    }

    60% {
      transform: scale(1);
    }
  }

  --animate-heartbeat: heartbeat 1.5s ease-in-out infinite;
}

:root {
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

body {
  font-family: var(--font-sans);
  color: var(--color-text-primary);
  background-color: #000000;
  /* Deep, rich abstract background */
  background-image:
    radial-gradient(circle at 15% 50%, rgba(41, 151, 255, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 85% 30%, rgba(191, 90, 242, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 50% 0%, rgba(255, 255, 255, 0.03) 0%, transparent 30%);
  background-attachment: fixed;
  margin: 0;
  overflow-x: hidden;
  min-height: 100vh;
}

/* --- Premium Glass Utilities --- */
@layer utilities {

  /* Standard Glass Panel (Cards) */
  .glass {
    @apply bg-white/5 backdrop-blur-2xl border border-white/10 shadow-[0_8px_32px_0_rgba(0, 0, 0, 0.36)];
  }

  /* Darker Glass (Sidebar / Modals) */
  .glass-dark {
    @apply bg-black/40 backdrop-blur-3xl border border-white/5 shadow-2xl;
  }

  /* Lighter Glass (Inputs / Active states) */
  .glass-light {
    @apply bg-white/10 backdrop-blur-md border border-white/20;
  }

  /* Premium Card with Hover Effect */
  .glass-card {
    @apply bg-[#1c1c1e]/60 backdrop-blur-xl border border-white/5 rounded-[32px] shadow-lg hover:bg-[#2c2c2e]/60 hover:border-white/10 hover:shadow-2xl hover:scale-[1.01] transition-all duration-500 ease-out;
  }

  /* Form Inputs */
  .glass-input {
    @apply bg-white/5 border border-white/10 text-white placeholder:text-neutral-500 rounded-2xl px-4 py-3 focus:bg-white/10 focus:border-[#2997FF]/50 focus:ring-1 focus:ring-[#2997FF]/20 outline-none backdrop-blur-sm transition-all duration-300;
  }

  /* Buttons */
  .btn-primary {
    @apply bg-[#0071E3] text-white px-6 py-3 rounded-full font-medium hover:bg-[#0077ED] active:scale-95 transition-all duration-300 shadow-lg shadow-blue-500/20;
  }

  .btn-glass {
    @apply bg-white/10 text-white border border-white/10 px-6 py-3 rounded-full font-medium hover:bg-white/20 active:scale-95 transition-all duration-300 backdrop-blur-md;
  }

  /* Typography */
  .display-title {
    @apply text-5xl md:text-7xl font-semibold tracking-tight leading-[1.05] bg-gradient-to-b from-white to-white/70 bg-clip-text text-transparent;
  }

  .section-title {
    @apply text-3xl md:text-4xl font-semibold tracking-tight text-white;
  }

  /* Scrollbar aesthetics */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
}